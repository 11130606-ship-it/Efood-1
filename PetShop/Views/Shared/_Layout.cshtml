<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - efood</title>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to right, #f9f9f9, #e9eff5);
        }

        header {
            font-size: 2.5rem;
            color: #7c6e6e;
            padding: 20px 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: 700;
            letter-spacing: 2px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        }

        /* 頂部連結 */
        .top-links {
            display: flex;
            justify-content: flex-end;
            gap: 20px;
            width: 100%;
            padding-right: 30px;
        }

            .top-links a {
                color: #565b5e;
                font-size: 16px;
                text-decoration: none;
                font-weight: bold;
                transition: color 0.3s;
            }

                .top-links a:hover {
                    color: #8e8480;
                    text-decoration: underline;
                }

        /* 頁尾 */
        h6 {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: #e9eff5;
            margin: 0;
            text-align: center;
            z-index: 100;
        }

        /* ===== 側邊欄 ===== */
        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 230px;
            height: 100%;
            background-color: #8e8480;
            color: #fff;
            display: flex;
            flex-direction: column;
            transform: translateX(-230px);
            transition: transform 0.3s ease;
            z-index: 999;
        }

            #sidebar.open {
                transform: translateX(0);
            }

        /* ☰ 按鈕 */
        .toggle-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            background: none;
            border: none;
            color: #444;
            font-size: 28px;
            cursor: pointer;
            z-index: 1000;
        }

        /* 選單內容 */
        .menu {
            margin-top: 80px;
            display: flex;
            flex-direction: column;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 10px 20px;
            color: #fff;
            text-decoration: none;
            transition: background 0.2s;
        }

            .menu-item:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

            .menu-item img {
                width: 45px;
                height: 45px;
                margin-right: 12px;
            }

        /* 子選單 */
        .submenu {
            display: none;
            flex-direction: column;
            margin-left: 35px;
            border-left: 1px solid rgba(255,255,255,0.3);
            padding-left: 10px;
        }

        .submenu-item {
            color: #ccc;
            font-size: 14px;
            padding: 6px 0;
            text-decoration: none;
        }

            .submenu-item:hover {
                color: #fff;
            }

            .submenu-item img {
                width: 30px;
                height: 30px;
                margin-right: 6px;
            }

        .parent-item {
            cursor: pointer;
        }

        /* 主內容區 */
        .main-content {
            padding: 20px;
        }

        /* 頭像 + tooltip */
        .profile-container {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 999;
        }

        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            cursor: pointer;
        }

        .profile-tooltip {
            display: none;
            position: absolute;
            top: 30px;
            right: 0;
            background: white;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
            min-width: 140px;
            text-align: left;
            z-index: 1000;
        }

        .profile-container:hover .profile-tooltip {
            display: block;
        }

        .profile-tooltip a {
            display: block;
            color: #466954;
            text-decoration: none;
            margin-top: 5px;
        }

            .profile-tooltip a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <header>E-食代</header>

    <div class="top-links">
        @if (Session["LoginUser"] == null)
        {
            @Html.ActionLink("登入/註冊", "LeaveHome", null, new { @class = "nav-link" })
        }
        else
        {
            @Html.ActionLink("登出", "Logout", null, new { @class = "nav-link" })
        }

        @Html.ActionLink("回首頁", "Index", null, new { @class = "nav-link" })
    </div>

    @if (Session["LoginUser"] != null)
    {
        <!-- ☰ 按鈕 -->
        <button class="toggle-btn" onclick="toggleSidebar()">☰</button>

        <!-- 側邊欄 -->
        <div id="sidebar">
            <div class="menu">
                <a href="@Url.Action("DiaryIndex", "Home")" class="menu-item">
                    <img src="~/Image/飲食紀錄icon.png" alt="">
                    <span>飲食紀錄</span>
                </a>
                <a href="@Url.Action("ObjectiveIndex", "Home")" class="menu-item">
                    <img src="~/Image/目標設定icon.png" alt="">
                    <span>目標設定</span>
                </a>

                <!-- 飲食分析 (主項) -->
                <div class="menu-item parent-item" onclick="toggleSubmenu(this)">
                    <img src="~/Image/飲食分析icon.png" alt="">
                    <span>飲食分析 ▾</span>
                </div>

                <!-- 子選單 -->
                <div class="submenu">
                    <a href="@Url.Action("Analysis1Index", "Home")" class="submenu-item">
                        <img src="~/Image/一周飲食統計icon.png" alt="">
                        <span>一週飲食統計</span>
                    </a>
                    <a href="@Url.Action("Analysis2Index", "Home")" class="submenu-item">
                        <img src="~/Image/每日熱量趨勢icon.png" alt="">
                        <span>每日熱量趨勢</span>
                    </a>
                    <a href="@Url.Action("Analysis3Index", "Home")" class="submenu-item">
                        <img src="~/Image/營養比例分析icon.png" alt="">
                        <span>營養比例分析</span>
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- 主內容 -->
    <div class="main-content">
        @RenderBody()
    </div>

    <h6>版權所有，抄襲必究</h6>

    <!-- 右上角頭像 -->
    @if (Session["LoginUser"] != null && Session["ImageName"] != null)
    {
        <div class="profile-container">
            <img src="@Url.Content("~/Photo/" + Session["ImageName"])" alt="會員照片" class="profile-pic" />
            <div class="profile-tooltip">
                <p><strong>@Session["LoginUser"]</strong></p>
                <p><strong>@Session["RealName"]</strong></p>
                <a href="@Url.Action("MemberInfo", "Home", new { account = Session["LoginUser"] })">會員資料</a>
                <a href="@Url.Action("Logout", "Home")">登出</a>
            </div>
        </div>
    }

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("open");
        }

        function toggleSubmenu(el) {
            const submenu = el.nextElementSibling;
            submenu.style.display = submenu.style.display === "flex" ? "none" : "flex";
        }
    </script>
</body>
</html>
