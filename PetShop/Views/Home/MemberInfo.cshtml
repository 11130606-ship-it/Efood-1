@model PetShop.Models.RegisterUser

<div class="container">
    <h2>會員資料修改</h2>

    @if (Model != null)
    {
        using (Html.BeginForm("UpdateMemberInfo", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.RegisterAccount)

            <p>
                <strong>帳號：</strong>@Model.RegisterAccount
                @Html.HiddenFor(m => m.RegisterAccount) <!-- 帳號不能修改，用 Hidden 傳回 -->
            </p>
            <p>
                <strong>姓名：</strong>
                @Html.TextBoxFor(m => m.RegisterRealName)
            </p>
            <p>
                <strong>電話：</strong>
                @Html.TextBoxFor(m => m.RegisterPhone)
            </p>
            <p>
                <strong>生日：</strong>
                @Html.TextBoxFor(m => m.RegisterBirthday)
            </p>
            <p>
                <strong>身高：</strong>
                @Html.TextBoxFor(m => m.RegisterHeight)
            </p>
            <p>
                <strong>體重：</strong>
                @Html.TextBoxFor(m => m.RegisterWeight)
            </p>
            <p>
                <strong>照片：</strong><br />
                <img src="~/Photo/@Model.ImageName" alt="會員照片" style="width:100px;height:100px;border-radius:50%;object-fit:cover;" /><br />
                <input type="file" name="ImageFile" />
            </p>
            <button type="submit" class="btn btn-primary">更新資料</button>
        }
    }
    else
    {
        <p>找不到會員資料。</p>
    }
</div>
